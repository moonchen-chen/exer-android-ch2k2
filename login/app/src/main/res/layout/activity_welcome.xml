<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mask1"
    tools:context=".WelCome">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="1085dp"
        android:layout_height="813dp"
        android:layout_marginStart="-40dp"
        android:src="@drawable/mask2"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="850dp"
        android:layout_height="950dp"
        android:layout_marginStart="-210dp"
        android:src="@drawable/mask1"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-217dp" />

    <Button
        android:id="@+id/button_skip"
        android:layout_width="55dp"
        android:layout_height="32dp"
        android:layout_marginStart="292.5dp"
        android:layout_marginTop="29dp"
        android:backgroundTint="#f3f4f5"
        android:padding="1dp"
        android:text="Skip"
        android:textColor="@color/orange"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="180dp"
        android:text="Welcome to"
        android:textSize="53sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome2"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:text="Food Hub"
        android:textColor="@color/orange"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="@+id/welcome"
        app:layout_constraintTop_toBottomOf="@+id/welcome" />

    <TextView
        android:id="@+id/welcome3"
        android:layout_width="266dp"
        android:layout_height="54dp"
        android:layout_marginTop="309dp"
        android:layout_marginStart="30dp"
        android:text="Your favourite foods delivered fast at your door."
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome4"
        android:layout_width="74dp"
        android:layout_height="19dp"
        android:layout_marginStart="150.5dp"
        android:layout_marginTop="500dp"
        android:text="sign in with"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="294.46dp"
        android:layout_height="0dp"
        android:src="@drawable/mask"
        android:layout_marginTop="509dp"
        android:layout_marginStart="54.26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textalready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81.5dp"
        android:layout_marginTop="680dp"
        android:text="Already have an account?"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="260dp"
        android:layout_marginTop="680dp"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagefb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fb"
        android:layout_marginStart="20dp"
        android:layout_marginTop="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagegg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gg"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="185dp"
        android:layout_marginTop="500dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="596dp"
        android:src="@drawable/ep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>