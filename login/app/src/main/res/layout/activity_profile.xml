<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_backgroundprofile"
    tools:context=".profile">
    <FrameLayout
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:background="@drawable/nut_tron">
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            app:cardCornerRadius="500dp">
            <ImageView
                android:id="@+id/avartar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/image_13"/>
        </androidx.cardview.widget.CardView>

    </FrameLayout>



    <Button
        android:id="@+id/changeimage"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/nut_tron"
        android:drawableLeft="@drawable/ic_group_18052"
        android:paddingLeft="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="328dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fullname"
            android:layout_width="106dp"
            android:layout_height="18dp"
            android:layout_marginLeft="43dp"
            android:text="Full name"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center">


                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="324dp"
                    android:layout_height="65dp"
                    android:background="@drawable/custom_textfield"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                     />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="106dp"
            android:layout_height="18dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="5dp"
            android:text="E-mail"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="324dp"
                    android:layout_height="65dp"
                    android:background="@drawable/custom_textfield"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="106dp"
            android:layout_height="18dp"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="5dp"
            android:text="Phone Number"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center">



                <TextView
                    android:id="@+id/phone"
                    android:layout_width="324dp"
                    android:layout_height="65dp"
                    android:background="@drawable/custom_textfield"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    />


        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
